<h1><%= @task.task %></h1>
<p><%= @task.description %></p>
<p><%= @task.rating %> stars</p>
<p><%= link_to "all the tasks", tasks_path %></p>
<p><%= link_to "edit this task", edit_task_path(@task) %></p>
<p><%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %></p>
